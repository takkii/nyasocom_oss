<script type="text/javascript">
  function searchWord(word) {
      if (!document.getElementsByTagName) return;
      if (!word) return;
      var arrayA = document.getElementsByTagName("a", "font", "title");
      for (i = 0; i < arrayA.length; i++) {
          if (arrayA[i].innerHTML.match(word)) {
              if (arrayA[i].scrollIntoView)
                  arrayA[i].scrollIntoView();
              arrayA[i].focus();
              return;
          }
      }
      alert("見つかりませんでした。");
  }
</script>
<div align='right'>
  <form action="views/layout.erb" lang="ja" onsubmit="searchWord(this.elements['word'].value);
            return false;">
    <input type="text" name="word" placeholder="検索する単語を入力">
